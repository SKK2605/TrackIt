<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#264653"
    android:weightSum="100"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="20"
        android:text="TrackIt"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center">
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/round_for_upper"
        android:id="@+id/upper_layout"
        android:padding="10dp"
        android:layout_weight="20"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:text="98.6 F"
       android:id="@+id/body_temp"
       android:textColor="#000000"
       android:layout_marginBottom="7.5dp"
       android:gravity="center"
       android:background="#E9C46A"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/body_temp"
        android:text="LOW RISK"
        android:id="@+id/risk_indicator"
        android:textColor="#000000"
        android:gravity="center"
        android:background="#FFFF00">
    </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_weight="40"
        android:background="@drawable/round"
        android:layout_below="@+id/upper_layout"
        android:orientation="horizontal"
        android:id="@+id/qr_activity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/download"
        android:id="@+id/qr_code"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="35dp"
        android:foregroundGravity="center"
        android:layout_height="wrap_content">
    </ImageView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCAN"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_below="@+id/qr_code"
            android:background="#F4A261">
        </Button>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Your Contacts"
        android:layout_weight="20"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/round_for_upper"
        android:layout_below="@+id/qr_activity">
    </Button>

</LinearLayout>
